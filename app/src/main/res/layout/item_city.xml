<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/im_city"
        android:layout_width="@dimen/city_remove_button_size"
        android:layout_height="@dimen/city_remove_button_size"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_city_black_24dp" />

    <TextView
        android:id="@+id/tv_city_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical" />

    <ImageButton
        android:id="@+id/ib_remove_city"
        android:layout_width="@dimen/city_remove_button_size"
        android:layout_height="@dimen/city_remove_button_size"
        android:background="?selectableItemBackground"
        app:srcCompat="@drawable/ic_remove_city_black_24dp" />

</LinearLayout>