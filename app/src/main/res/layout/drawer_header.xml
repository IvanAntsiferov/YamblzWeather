<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_height"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/im_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/drawer_header_image_offset"
            android:layout_marginTop="@dimen/drawer_header_image_offset"
            app:srcCompat="@drawable/im_clear" />

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="LinearLayoutManager" />

    <RelativeLayout
        android:id="@+id/rl_add_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/city_list_bottom_margin"
        android:background="?selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/im_add_city"
            android:layout_width="@dimen/city_remove_button_size"
            android:layout_height="@dimen/city_remove_button_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_add_city_black_24dp" />

        <TextView
            android:id="@+id/tv_add_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/im_add_city"
            android:text="@string/nav_add_favorite_city" />

    </RelativeLayout>

</LinearLayout>